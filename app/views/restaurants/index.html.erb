<div class="container">
  <h1>Welcome to Yelp!</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant) %> - <%= link_to "Edit", edit_restaurant_path(restaurant) %></li>
    <% end %>
  </ul>
  <p><%= link_to "Create a new restaurant", new_restaurant_path, class: 'btn btn-primary mt-2' %></p>
</div>
